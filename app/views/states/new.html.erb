<%= form_for(@state) do |f| %>

<p>
	<%= f.label :name, "Name:" %><br/>
	<%= f.text_field :name %>
</p>

<p>
	<%= f.label :abvr %><br/>
	<%= f.text_field :abvr %>
</p>

<p>
	<%= f.label :predet %><br/>
	<%= f.check_box :predet %>
</p>

<p>
<%= f.label :country_id, "Countries" %><br/>
	<%= f.select :country_id, Country.all.collect {|p| p.name} %>
</p>

<%= f.submit "Save" %>

<% end %>